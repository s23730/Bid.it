@model IEnumerable<Auction>

@{
    ViewData["Title"] = "Auctions";
}
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    @*<th>@Html.DisplayNameFor(model => model.AuctionName)</th>*@
                    <th>Name</th>
                    <th>Start</th>
                    <th>Duration</th>
                    <th>Price</th>
                    <!--@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
    <th>Actions</th>
    }-->
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <!--<img class="rounded-circle" src="@auction.AuctionName" alt="@auction.AuctionName" style="max-width: 150px" />-->
                        </td>
                        <td class="align-left">
                            @Html.DisplayFor(modelItem => auction.AuctionName)
                        </td>
                        <td class="align-left">
                            @Html.DisplayFor(modelItem => auction.AuctionStart)
                        </td>
                        <td class="align-left">
                            @Html.DisplayFor(modelItem => auction.Duration)
                        </td>
                        <td class="align-left">
                            @Html.DisplayFor(modelItem => auction.Price)
                        </td>
                        @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                        }*@
                    </tr>
                }
                </tbody>

            </table>

        </div>
    </div>
